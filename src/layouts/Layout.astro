---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
	
<html lang="es">
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<script src="https://cdn.tailwindcss.com"></script>
		<title>Spotify-like Interface</title>
	</head>
	<body class="flex h-screen bg-gray-900 text-white">
		<!-- Menú de navegación lateral -->
		<nav class="w-64 bg-black p-5 flex flex-col justify-between">
			<!-- Logo de la aplicación -->
	
			<div class="logo text-center mx-auto">
				<h2 class="text-green-500 text-2xl font-bold mb-8 shadow-lg shadow-cyan-500/50">Spotify</h2>
			</div>
			<!-- Menú de navegación -->
			<ul class="menu space-y-5">
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50 ">Inicio</a></li>
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50">Buscar</a></li>
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50">Tu Biblioteca</a></li>
			</ul>
			<!-- Lista de playlists -->
			<ul class="playlists mt-6 space-y-5">
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50"></a></li>
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50"></a></li>
				<li><a href="#" class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50"></a></li>
			</ul>
		</nav>
	
		<!-- Contenido principal -->
		<main class="flex-grow bg-gray-800 flex flex-col">
			<!-- Cabecera -->
			<header class="flex justify-between items-center p-6 bg-gray-700">
				<!-- Barra de búsqueda -->
				<input type="text" placeholder="Buscar..." class="w-80 bg-gray-600 text-white rounded-full px-4 py-2 outline-none">
				<!-- Perfil de usuario -->
				<div class="user-profile text-lg">
					<p></p>
				</div>
			</header>
	
			<!-- Sección de contenido -->
			<section class="p-6">
				<h1 class="text-3xl font-bold mb-6">Tus canciones favoritas</h1>
	
				<!-- Álbumes favoritos -->
				<div class="grid grid-cols-3 gap-6">
					<!-- Álbum 1 -->
					<div class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50 ">
						<img src="https://i.scdn.co/image/ab6761610000e5ebc3c50b358743bdd1a1298096" balt="Album 3" class="w-40 h-40 rounded-lg m-4">
						<p>Álbum 1</p>
					</div>
	
					<!-- Álbum 2 -->
					<div class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50 ">
						<img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT0vOVQiR7dJXp8sCAGcR81VeXBOZozUuZraQ&s" alt="Album 2" class="w-40 h-40 rounded-lg mb-4">
						<p>Álbum 2</p>
					</div>
	
					<!-- Álbum 3 -->
					<div class="text-white hover:text-green-500 shadow-lg shadow-cyan-500/50 ">
						<img src="https://static.wikia.nocookie.net/vallenato/images/8/83/Jorge_O%C3%B1ate.jpg/revision/latest?cb=20130803003956&path-prefix=es" balt="Album 3" class="w-40 h-40 rounded-lg m-4">
						<p>Álbum 3</p>
					</div>
				</div>
			</section>
		</main>
	</body>
	</html>
	
	</body>
</html>
<style is:global>
	:root {
		--accent: 136, 58, 234;
		--accent-light: 224, 204, 250;
		--accent-dark: 49, 10, 101;
		--accent-gradient: linear-gradient(
			45deg,
			rgb(var(--accent)),
			rgb(var(--accent-light)) 30%,
			white 60%
		);
	}
	html {
		font-family: system-ui, sans-serif;
		background: #13151a;
	}
	code {
		font-family:
			Menlo,
			Monaco,
			Lucida Console,
			Liberation Mono,
			DejaVu Sans Mono,
			Bitstream Vera Sans Mono,
			Courier New,
			monospace;
	}
</style>
